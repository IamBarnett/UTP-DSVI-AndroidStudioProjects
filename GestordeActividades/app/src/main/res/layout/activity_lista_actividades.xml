<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📋 Actividades Registradas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toca cualquier actividad para ver sus detalles"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_gravity="center" />

    <ListView
        android:id="@+id/listViewActividades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/card_style"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVolverLista"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="⬅️ Volver al Inicio"
        android:textSize="16sp"
        android:background="@drawable/button_cancel_style"
        android:textColor="@android:color/white" />

</LinearLayout>