<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestión de Órdenes"
        android:textSize="24sp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestionar Clientes"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestionar Productos"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnNuevaOrden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva Orden"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnConsultarOrdenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Órdenes" />

</LinearLayout>